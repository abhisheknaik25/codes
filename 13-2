CREATE OR REPLACE TRIGGER T1
AFTER UPDATE ON JOB FOR EACH ROW 
BEGIN
EXECUTE P1(:NEW.JOBID,:NEW.MINSAL);
END;
/

CREATE OR REPLACE TRIGGER T1
BEFORE UPDATE ON EMPLOYEE
FOR EACH ROW 
BEGIN
IF :NEW.SALARY=0 THEN
RAISE_APPLICATION_ERROR(-20555,'ERROR');
END IF;
END;
/

CREATE OR REPLACE PROCEDURE P(ID IN NUMBER,MINSAL IN NUMER)IS
CURSOR C IS
SELECT * FROM EMP;
VREC C1%ROWTYPE;
IDL NUMBER :=ID;
MINSAL NUMBER := MINSAL;
BEGIN
OPEN C;
LOOP
FETCH C INTO VREC;
IF(VREC.EID=IDL AND VREC.SAL<MINSAL)
THEN
UPDATE EMP SET SAL =MINSAL WHERE EID =IDL;
END IF;
END LOOP;
END;
/