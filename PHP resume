JS

var count = 1;

function validate() {
	var total = 0;
	for(var i = 1; i <= count; i++) {
		var temp = document.getElementById("m"+i).value;
		total += parseFloat(temp);
	};
	//alert(total);
	create();
	return true;
}

function create() {
	var tabler = "";
	var name = document.getElementById("name").value;
	tabler += "<table class='table'><tr><td>Name</td><td colspan=\"2\">"+name+"</td></tr><tr><td>Subject Name</td><td>Marks Obtained</td><td>Maximum Marks</td><tr>";

	var total = 0;
	for(var i = 1; i <= count; i++) {
		var n = document.getElementById("n"+i).value;
		var m = document.getElementById("m"+i).value;
		tabler += "<tr><td>"+n+"</td><td>"+m+"</td><td>100</td></tr>";
		total += parseInt(m);
	};
	tabler += "<tr><td colspan='2'>Total Marks</td><td>"+total+"</td></tr>";
	tabler += "<tr><td colspan='2'>Percentage</td><td>"+total/count+"%</td></tr>";
	tabler += "</table>"
	document.getElementById("container").innerHTML = tabler;
}

function addfield() {
	count = count + 1;
	document.getElementById("edu").insertAdjacentHTML("beforeend","<input class='inp' type='text' id='edu"+count+"' name='edu"+count+"' placeholder='Enter Name of Institution #"+count+"' oninput='validatename()'>");
	document.getElementById("edu").insertAdjacentHTML("beforeend","<input class='inp' type='text' id='eduy"+count+"' name='eduy"+count+"' placeholder='Enter Year #"+count+"' oninput='validatename()'>");
	document.getElementById("edu").insertAdjacentHTML("beforeend","<input class='inp' type='text' id='edud"+count+"' name='edud"+count+"' placeholder='Enter Description #"+count+"' oninput='validatename()'>");
}

function validatename() {
	var name = document.login.name.value;
	var re = /^[a-zA-Z]+$/;
	if(re.test(name) && name.length >= 3) {
		document.getElementById("name").style.border = "1px solid green";
		return true;
	}
	document.getElementById("name").style.border = "1px solid red";
	return false;
}

function validatemarks(i) {
	var marks = document.getElementById("m"+i).value;
	var re = /^[0-9]+$/;
	if(re.test(marks)) {
		document.getElementById("m"+i).style.border = "1px solid green";
		return true;
	}
	document.getElementById("m"+i).style.border = "1px solid red";
	return false;
}
