	width: 100%;
	height: 29px;
	padding: 5px 10px;
	margin: 10px 5px;
	font-family: "Open Sans", Sans-Serif;
	font-size: 17px;
}

.sub {
	width: 103%;
	padding: 10px 10px;
	font-family: "Open Sans", Sans-Serif;
	font-size: 17px;
	margin: 10px 5px;
}

h1 {
	font-family: "Open Sans", Sans-Serif;
	font-size: 29px;
	text-align: center;
}

h2 {
	font-family: "Open Sans", Sans-Serif;
	font-size: 15px;
	margin: 5px 5px;
	text-transform: uppercase;
}
