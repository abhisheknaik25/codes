<!DOCTYPE html>
<html>
	<head>
		<title>Form Validation using Javascript</title>
		<link rel="stylesheet" href="./style.css">
		<script type="text/javascript" src="./script.js"></script>
	</head>

	<body>
		<section class="form">
			<h1>Form Validation using Javascript</h1>
			<form name="info" action="#" onsubmit="validate(); return false;" method="post">
				<h2 id="h2name">Name</h2>
				<input class="inp" id="name" type="text" name="name" oninput="checkName()">
				<h2 id="h2email">Email</h2>
				<input class="inp" id="email" type="text" name="email" oninput="checkEmail()">
				<h2 id="h2phone">Phone</h2>
				<input class="inp" id="phone" type="text" name="phone" oninput="checkPhone()">
				<input class="sub" type="submit" value="Submit">
			</form>
		</section>
		<section class="form">
			<p id="x"></p>
		</section>
	</body>
</html>



function validate() {
	if(!checkName())
		document.getElementById("h2name").style.color = "red";
	else
		document.getElementById("h2name").style.color = "green";

	if(!checkEmail())
		document.getElementById("h2email").style.color = "red";
	else
		document.getElementById("h2email").style.color = "green";

	if(!checkPhone())
		document.getElementById("h2phone").style.color = "red";
	else
		document.getElementById("h2phone").style.color = "green";
	
	if(checkName() && checkEmail() && checkPhone())
		document.getElementById("x").innerHTML = "<h1>Valid</h1>";
	else
		document.getElementById("x").innerHTML = "<h1>Not Valid</h1>";
};

function checkName() {
	var name = document.info.name.value;
	var re = /\d/;
	if(re.test(name) || name.length < 3) {
		document.getElementById("name").style.color = "red";
		return false;
	}
	document.getElementById("name").style.color = "green";
	document.getElementById("h2name").style.color = "green";
	return true;
}

function checkEmail() {
	var email = document.info.email.value;
	var re = /\S+@\S+\.\S+\S/;
	if(!re.test(email)) {
		document.getElementById("email").style.color = "red";
		return false;
	}
	document.getElementById("email").style.color = "green";
	document.getElementById("h2email").style.color = "green";
	return true;
}

function checkPhone() {
	var phone = document.info.phone.value;
	if(phone.length != 10 || isNaN(phone)) {
		document.getElementById("phone").style.color = "red";
		return false;
	}
	document.getElementById("phone").style.color = "green";
	document.getElementById("h2phone").style.color = "green";
	return true;
}



